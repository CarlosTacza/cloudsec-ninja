{
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "X-XSS-Protection",
                    "value": "1; mode=block"
                },
                // { BLOQUEA EL GOOGLE ANALYTICS
                //     "key": "Referrer-Policy",
                //     "value": "no-referrer-when-downgrade"
                    
                // },    
                {
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                },
                {
                    "key": "X-Download-Options",
                    "value": "noopen"
                },
                {
                    "key": "Cache-Control",
                    "value": "no-store"
                },
                {
                    "key": "X-Frame-Options",
                    "value": "SAMEORIGIN"
                },
                {
                  "key": "Content-Security-Policy",
                  "value": "connect-src vitals.vercel-insights.com;"
                }
            ]
        }
    ]
}
